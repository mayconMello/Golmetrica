# Configurações do Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Key do TheSportsDB v2
TSD_API_KEY=your_tsd_api_key_here

# Ligas para processar (IDs separados por vírgula)
TSD_LEAGUE_IDS=4404,4625,4351,5688

# Fuso horário padrão
DEFAULT_TIMEZONE=America/Sao_Paulo

# Configurações de predição
HALF_LIFE_DAYS=365          # Decaimento temporal para histórico
ALPHA=3.0                   # Regularização (menor = mais diferenciação entre times)
KMAX=6                      # Máximo de gols para distribuição de Poisson

# Configurações de coleta
TSD_MAX_SEASONS=5           # Máximo de temporadas para backfill

# Configurações de debug
LOG_LEVEL=INFO              # INFO ou DEBUG para mais detalhes

# Salvar jogos finalizados em fixtures (true/false)
SAVE_PREVIOUS_IN_FIXTURES=false